<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Groups -->
    <record id="group_global_calendar_manager" model="res.groups">
        <field name="name">Global Calendar Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Record rules -->
    <record id="rule_global_calendar_user_visibility" model="ir.rule">
        <field name="name">Global Calendar: user visibility</field>
        <field name="model_id" ref="model_global_calendar_event"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">['|', ('allow_all_users','=',True), ('user_ids','in',[user.id])]</field>
    </record>

    <record id="rule_global_calendar_manager_all" model="ir.rule">
        <field name="name">Global Calendar: manager all</field>
        <field name="model_id" ref="model_global_calendar_event"/>
        <field name="groups" eval="[(4, ref('global_calendar.group_global_calendar_manager'))]"/>
        <!-- <field name="domain_force">[(1,'=',1)]</field> -->
        <field name="domain_force">[]</field>
    </record>
</odoo>
